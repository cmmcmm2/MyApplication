<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RadioGroup
        android:id="@+id/radioGroupBottom"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButtonHome"

            style="@style/BottomRadioStyle"

            android:checked="true"
            android:drawableTop="@drawable/bottom_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/radioButtonKinds"

            style="@style/BottomRadioStyle"

            android:drawableTop="@drawable/bottom_kinds"
            android:text="分类" />

        <RadioButton
            android:id="@+id/radioButtonSocial"

            style="@style/BottomRadioStyle"

            android:drawableTop="@drawable/bottom_social"
            android:text="婚礼说" />

        <RadioButton
            android:id="@+id/radioButtonMine"

            style="@style/BottomRadioStyle"

            android:drawableTop="@drawable/bottom_mine"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>